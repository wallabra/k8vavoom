class MenuScreenNewNetGameHeretic : replaces(MenuScreenNewNetGame);


//==========================================================================
//
//  CreateEpisodeList
//
//==========================================================================
override void CreateEpisodeList (out array!string epnames) {
  epnames[$] = "CITY OF THE DAMNED";
  if (WadLumpPresent('e2m1')) {
    epnames[$] = "HELL'S MAW";
    epnames[$] = "THE DOME OF D'SPARIL";
    if (WadLumpPresent('extended')) {
      epnames[$] = "THE OSSUARY";
      epnames[$] = "THE STAGNANT DEMESNE";
    }
  }
}


//==========================================================================
//
//  CreateMapList
//
//==========================================================================
override void CreateMapList (int episode, out array!string mapnames) {
  foreach (auto i; 0..9) {
    //Level.EnumNames[i] = P_GetMapName(epi * 9 + i);
    mapnames[$] = P_GetMapName(episode*9+i);
  }
}


//==========================================================================
//
//  GetMapName
//
//==========================================================================
override string GetMapName (int episode, int map) {
  return va("e%dm%d", episode+1, map+1);
}
