//============================================================================
//
//  A_ChangeFlag
//
//============================================================================
[decorate] final void A_ChangeFlag (string Name, bool Value) {
  bool CountKillBefore = CountsAsKill();
  bool CountItemBefore = bCountItem;
  SetDecorateFlag(Name, Value);
  // check if count as kill status changed
  bool cak = CountsAsKill();
  if (cak != CountKillBefore) {
    if (cak) {
      // it now counts as kill
      ++Level.TotalKills;
    } else {
      // it no longer counts as kill
      --Level.TotalKills;
    }
  }
  // the same for items
  if (CountItemBefore != bCountItem) {
    if (bCountItem) {
      ++Level.TotalItems;
    } else {
      --Level.TotalItems;
    }
  }
}


