override bool eventSetPendingWeapon (Entity ent) {
  if (!MO) return false;
  Weapon wpn = Weapon(ent);
  if (!wpn) return false;
  for (Inventory inv = EntityEx(MO).Inventory; inv; inv = inv.Inventory) {
    if (ent == wpn) {
      PendingWeapon = wpn;
      return true;
    }
  }
  return false;
