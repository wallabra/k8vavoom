//==========================================================================
//
//  IintermissionStart
//
//==========================================================================
override void IintermissionStart () {
  if (cl && cl.Level && cl.Level.bNoIntermission) {
    StopAllSounds();
    skipintermission = false;
    CmdBuf_AddText("TeleportNewMap\n");
  } else {
    GSBar.Hide();
    GImission.Show();
    GImission.Start();
    GFinale.Hide();
  }
}


